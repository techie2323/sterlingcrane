<Window x:Class="Testing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testing"
        mc:Ignorable="d"
        Title="Disk Information" Height="326" Width="403">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="343*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Computer Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtComputer" Grid.Column="1" HorizontalAlignment="Left" Margin="94,14,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="120"/>
        <Button x:Name="btnQuery" Content="Query" Grid.Column="1" HorizontalAlignment="Left" Margin="255,16,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtResults" HorizontalAlignment="Left" Margin="10,60,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="225" Width="373" IsReadOnly="True" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
